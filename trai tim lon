import os
import time
import math
from colorama import Fore, Style, init
import sys

# Khởi tạo colorama
init(autoreset=True)

# Người dùng nhập tên
text = input("Nhập tên của bạn: ")

# Danh sách màu luân phiên
colors = [Fore.BLACK, Fore.GREEN, Fore.RED, Fore.YELLOW, Fore.MAGENTA, Fore.BLUE]
color_index = 0

def print_slow(line, delay=0.002):
    """In từng ký tự với độ trễ nhỏ để tạo hiệu ứng xuất hiện dần"""
    for ch in line:
        sys.stdout.write(ch)
        sys.stdout.flush()
        time.sleep(delay)
    print()

while True:
    # Xóa màn hình (tương thích mọi hệ điều hành)
    os.system('cls' if os.name == 'nt' else 'clear')
    
    # Chọn màu hiện tại
    color = colors[color_index]
    
    # In hình trái tim
    for y in range(15, -15, -1):
        line = ""
        for x in range(-30, 30):
            # Phương trình hình trái tim
            formula = ((x*0.05)**2 + (y*0.1)**2 - 1)**3 - (x*0.05)**2 * (y*0.1)**3
            if formula <= 0:
                # Lặp tên theo vị trí
                line += text[(x - y) % len(text)]
            else:
                line += " "
        # In dòng hiện từng chữ
        print_slow(color + line + Style.RESET_ALL, delay=0.002)
    
    # Đổi sang màu tiếp theo
    color_index = (color_index + 1) % len(colors)
    
    # Tạm dừng trước khi lặp lại
    time.sleep(0.1)
